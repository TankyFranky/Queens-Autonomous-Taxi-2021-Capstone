<launch>
	
	
	<arg name="vehicle_name" default="vehicle" doc="Name of car"/>
	<include file="$(find file_server)/launch/ros_sharp_communication.launch">
		<arg name="port" value="9090" />
	</include>

	<arg name="model" default="$(env TURTLEBOT3_MODEL)" />
	<arg name="directory" default="'$(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro'" doc="Directory of urdf"/>	
	<arg name="urdf_file" default="$(find xacro)/xacro.py '$(arg directory)'" />
	
	<param name="robot/name" value="$(arg vehicle_name)" />
	<param name="robot_description" command="$(arg urdf_file)" />

</launch>
